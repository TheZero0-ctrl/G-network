<% provide(:title, "Log In") %>
<%# Main Container %>

<div class="flex items-center justify-center min-h-screen bg-gray-900">
  <%# Card container %>
  <div class="w-9/12 bg-[url('bg1.png')] bg-cover rounded-lg p-10 flex flex-col space-y-4 md:flex-row md:space-y-0 md:justify-around">
    <div class="bg-zinc-900 bg-opacity-80 rounded-l-lg p-4 w-[100%] md:p-20 md:w-max">
      <div class="text-white text-left text-sm font-light mb-4">Log in to your account</div>


      <button class="flex items-center justify-center bg-blue-900 text-white text-sm font-thin
        border border-blue-900 rounded-md py-4 px-6 space-x-2 hover:bg-opacity-80 hover:scale-105 active:border-blue-400 w-full">
        <%= image_tag "facebook.png", class:"w-5"%>
         <%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
              <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post %><br />
            <% end %>
          <% end %>
      </button>

      <div class="flex space-x-2 mt-10 items-center justify-center mb-10">
        <div class="w-2/5"><hr class="border-[0.5px] border-zinc-600"></div>
        <div class="text-white text-xs">OR</div>
        <div class="w-2/5"><hr class="border-[0.5px] border-zinc-600"></div>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
      <div class="field">
        <%= f.label :email, class:"text-white text-sm font-thin mb-4" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"bg-zinc-900 bg-opacity-8 mb-4 rounded-sm border-[0.5px] border-zinc-600 text-white w-full" %>
      </div>

      <div class="field">
        <%= f.label :password, class:"text-white text-sm font-thin mb-4" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"bg-zinc-900 bg-opacity-8 mb-4 rounded-sm border-[0.5px] border-zinc-600 text-white w-full"%>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class:"text-white text-sm font-thin"%>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class:"bg-white text-black text-sm text-center border border-white
        rounded-md py-4 px-6 hover:bg-black hover:text-white hover:scale-105 active:border-blue-500 w-full mb-10 mt-10" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
    <div class="self-center">
      <h2 class="text-white text-left md:text-center text-4xl font-bold mb-5">G-Network</h2>
      <p class="text-white text-left md:text-center">Social Media For the new generation</p>
    </div>
  </div>
</div>
