<% provide(:title, "Home") %>
<div class="flex flex-col space-y-4 md:flex-row md:space-y-0 p-4 text-white bg-gray-900 md:justify-between">
    <div>
        profile
    </div>
    <div class="flex flex-col md:w-8/12">
        <div class="bg-zinc-900 p-4 rounded-lg shadow-lg mb-4">
            <%= render 'post_form' %>
        </div>
        <div class="flex flex-col gap-4">
            <% @posts.each do |post|%>
                <%= render "post", post:post %>
            <% end %>
        </div>
    </div>
    <div>
        Friend request
    </div>
</div>
